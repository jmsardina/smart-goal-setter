<section id="content">
  <%= link_to "Back", goals_path %>
  <%= link_to "Edit", edit_goal_path(@goal) %>

  <div class="block-header">
    <% if @goal.user == current_user %>
      <h2>
        <%= @goal.name %>
        <strong>Tags:</strong>
        <% @tags.each do |tag|%>
          <%= tag.name %>
        <% end %>
        <small><%= @goal.days_left%> DAYS LEFT TO COMPLETE THIS GOAL!</small>
      </h2>
        <h4><%= @goal.description %></h4>

        <button id="show-activity-form">Add Activity</button>
        <%= render 'activities/form', remote: true %>
  </div>

      </header>
    <div class="card">
      <div class="card-header">
        <h2>
          Things to do <small><em>We know you can do this!</em></small>
        </h2>
      </div>

      <div class="card-body table-responsive">
       <!--  <ul id="activities-list" data-actvity-id="<%#= @goal.id %>" class="list"> -->
        <table class="table">
          <thead>
            <tr>
              <th>Status</th>
              <th>Description</th>
              <th>Barrier</th>
              <th>Facilitator</th>
              <th>Frequency</th>
              <th>Period</th>
              <th>Points</th>
              <th>Remaining for Period</th>
              <th>Due By</th>
            </tr>
          </thead>

          <tbody style="overflow=scroll;">
            <% @activities.each do |activity| %>
              <%= render "activity", :activity => activity, :goal => @goal %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <% end %>
</section>

